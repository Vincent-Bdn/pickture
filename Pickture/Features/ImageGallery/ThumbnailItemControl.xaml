<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Pickture.Shared.Controls"
             x:Class="Pickture.Features.ImageGallery.ThumbnailItemControl">
    
    <VerticalStackLayout Padding="4" Spacing="2">
        
        <Grid RowDefinitions="*" ColumnDefinitions="*" Margin="0">
            <Frame CornerRadius="4" HasShadow="False" Padding="0" Margin="0" Grid.Row="0" Grid.Column="0">
                <local:AsyncThumbnailImage 
                    x:Name="ThumbnailImage"
                    Aspect="AspectFill"
                    BackgroundColor="#E8E8E8"
                    FilePath="{Binding FilePath}"/>
            </Frame>
            
            <!-- Star icon overlay for favorites -->
            <Label 
                Grid.Row="0" 
                Grid.Column="0"
                FontSize="16"
                Text="â­"
                Padding="4"
                HorizontalTextAlignment="End"
                VerticalTextAlignment="Start"
                IsVisible="{Binding IsFavorite}" />
        </Grid>
        
        <Label 
            x:Name="FileName"
            FontSize="10"
            LineBreakMode="TailTruncation"
            TextColor="#666666"
            Text="{Binding FileName}"/>
    </VerticalStackLayout>
</ContentView>
