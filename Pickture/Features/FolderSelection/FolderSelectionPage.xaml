<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pickture.Features.FolderSelection.FolderSelectionPage"
             Title="Pickture - Image Gallery"
             BackgroundColor="#F5F5F5">

    <VerticalStackLayout 
        Padding="40" 
        Spacing="30"
        VerticalOptions="Center"
        HorizontalOptions="Center">

        <Label 
            Text="Welcome to Pickture" 
            FontSize="32"
            FontAttributes="Bold"
            TextColor="#333333"
            HorizontalTextAlignment="Center"/>

        <Label 
            Text="A lightweight image viewer for photographers" 
            FontSize="16"
            TextColor="#666666"
            HorizontalTextAlignment="Center"/>

        <Button 
            x:Name="LoadFolderButton"
            Text="Open a folder" 
            Padding="40,20"
            FontSize="18"
            CornerRadius="8"
            Clicked="OnLoadFolderClicked"
            BackgroundColor="#007AFF"
            TextColor="White"
            WidthRequest="300"
            HorizontalOptions="Center"/>

        <Label 
            Text="Select a folder containing your images to get started" 
            FontSize="14"
            TextColor="#999999"
            HorizontalTextAlignment="Center"
            Margin="0,20"/>

    </VerticalStackLayout>

</ContentPage>
