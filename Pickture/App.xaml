<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Pickture"
             xmlns:converters="clr-namespace:Pickture.Shared.Converters"
             x:Class="Pickture.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <converters:ThumbnailConverter x:Key="ThumbnailConverter" />
            <converters:FullImageConverter x:Key="FullImageConverter" />
            <converters:SelectionColorConverter x:Key="SelectionColorConverter" />
            <converters:SelectionWidthConverter x:Key="SelectionWidthConverter" />
            <converters:ProcessingModeButtonColorConverter x:Key="ProcessingModeButtonColorConverter" />
            <converters:ProcessingModeTextColorConverter x:Key="ProcessingModeTextColorConverter" />
            <converters:VisualEffectButtonColorConverter x:Key="VisualEffectButtonColorConverter" />
            <converters:VisualEffectTextColorConverter x:Key="VisualEffectTextColorConverter" />
            <converters:CustomEffectVisibleConverter x:Key="CustomEffectVisibleConverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
